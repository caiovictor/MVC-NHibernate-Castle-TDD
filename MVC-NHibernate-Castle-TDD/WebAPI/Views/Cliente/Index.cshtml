
@{
    ViewBag.Title = "Index";
    @model  List<Core.Entity.Cliente>
}

<script language="JavaScript" type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>

<h2>Clientes</h2>

<div class="panel-body">

    @Html.ActionLink("Novo", "Add", null, new { @class = "btn btn-md btn-primary" })

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Telefone</th>
                    <th>Endereco</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (Core.Entity.Cliente c in Model)
                    {
                        <tr>
                            <td>@c.Id</td>
                            <td>@c.Nome</td>
                            <td>@c.Telefone</td>
                            <td>@c.Endereco</td>
                            <td>
                                <a href="@Url.Action("Edit", "Cliente", new { id = c.Id })">
                                    <i class="fa fa-pencil" style="font-size: 15px" data-toggle="tooltip" data-placement="top" title="" data-original-title="Editar"></i>
                                </a>
                                <a href="#" onclick="deleteCliente(@c.Id)">
                                    <i class="fa fa-trash-o" style="margin-left:5px; font-size: 15px" data-toggle="tooltip" data-placement="top" title="" data-original-title="Excluir"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>